# HotelDruid Docker Environment Configuration
# Copy this file to .env and modify as needed

# Database Configuration
DB_HOST=hoteldruid-db
DB_PORT=3306
DB_NAME=hoteldruid
DB_USER=hoteldruid_user
DB_PASSWORD=hoteldruid_pass_2024
DB_ROOT_PASSWORD=hoteldruid_root_2024

# Application Configuration
APP_NAME=HotelDruid
APP_ENV=production
APP_DEBUG=false
APP_URL=http://localhost:8080

# PHP Configuration
PHP_UPLOAD_MAX_FILESIZE=50M
PHP_POST_MAX_SIZE=50M
PHP_MAX_EXECUTION_TIME=300
PHP_MEMORY_LIMIT=256M

# Timezone
TZ=Europe/Rome

# Security (change these in production!)
SESSION_SECRET=change_this_in_production_2024
CSRF_SECRET=change_this_csrf_secret_2024

# Docker specific
COMPOSE_PROJECT_NAME=hoteldruid