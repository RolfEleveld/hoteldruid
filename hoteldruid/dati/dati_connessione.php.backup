<?php

##################################################################################
#    HOTELDRUID - Docker Configuration
#    Database connection configuration for Docker MySQL container
##################################################################################

# Database connection parameters for Docker environment
$PHPR_DB_TYPE = "mysql";
$PHPR_DB_NAME = getenv('DB_NAME') ?: "hoteldruid";
$PHPR_DB_HOST = getenv('DB_HOST') ?: "hoteldruid-db";
$PHPR_DB_PORT = getenv('DB_PORT') ?: "3306";
$PHPR_DB_USER = getenv('DB_USER') ?: "hoteldruid_user";
$PHPR_DB_PASS = getenv('DB_PASSWORD') ?: "hoteldruid_pass_2024";

# External database loading options
$PHPR_LOAD_EXT = "NO";

# Table prefix (usually empty)
$PHPR_TAB_PRE = "";

# Connection timeout and options
$PHPR_DB_CHARSET = "utf8mb4";
$PHPR_DB_COLLATION = "utf8mb4_unicode_ci";

# Docker environment detection
if (getenv('DOCKER_ENVIRONMENT') !== false || file_exists('/.dockerenv')) {
    $DOCKER_ENV = true;
    # Additional Docker-specific configurations can go here
} else {
    $DOCKER_ENV = false;
}

# Log database connection attempts for debugging
if (function_exists('error_log')) {
    error_log("HotelDruid DB Config - Host: $PHPR_DB_HOST, Database: $PHPR_DB_NAME, User: $PHPR_DB_USER");
}

